{
  "$schema": "../dynamic-compose-schema.json",
  "services": [
    {
      "name": "homeassistant",
      "image": "ghcr.io/home-assistant/home-assistant:2025.7.2",
      "isMain": true,
      "networkMode": "host",
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/config",
          "containerPath": "/config"
        }
      ],
      "privileged": true
    }
  ]
}
