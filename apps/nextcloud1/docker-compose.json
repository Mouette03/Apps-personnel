{
  "$schema": "../dynamic-compose-schema.json",
  "services": [
    {
      "name": "nextcloud",
      "image": "nextcloud:31.0.7",
      "internalPort": 80,
      "isMain": true,
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/nextcloud",
          "containerPath": "/var/www/html"
        }
      ],
      "environment": {
        "MYSQL_DATABASE": "database",
        "MYSQL_USER": "nextcloud",
        "MYSQL_PASSWORD": "${NEXTCLOUD_DB_PASSWORD}",
        "MYSQL_HOST": "nextcloud-db",
        "NEXTCLOUD_ADMIN_USER": "${NEXTCLOUD_ADMIN_USER}",
        "NEXTCLOUD_ADMIN_PASSWORD": "${NEXTCLOUD_ADMIN_PASSWORD}",
        "NEXTCLOUD_TRUSTED_DOMAINS": "${NEXTCLOUD_TRUSTED_DOMAINS}",
        "APACHE_SERVER_NAME": "localhost"
      },
      "depends_on": [
        "nextcloud-db"
      ],
      "networks": ["nextcloud-network"],
      "entrypoint": "/bin/sh -c 'while ! nc -z nextcloud-db 3306; do echo \"Waiting for MariaDB to be ready...\"; sleep 2; done; apache2-foreground'"
    },
    {
      "name": "nextcloud-db",
      "image": "mariadb:11",
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/db",
          "containerPath": "/var/lib/mysql/data"
        }
      ],
      "environment": {
        "MARIADB_ROOT_PASSWORD": "rootpassword",
        "MYSQL_DATABASE": "database",
        "MYSQL_USER": "nextcloud",
        "MYSQL_PASSWORD": "${NEXTCLOUD_DB_PASSWORD}"
      },
      "networks": ["nextcloud-network"]
    }
  ],
  "networks": {
    "nextcloud-network": {
      "driver": "bridge"
    }
  }
}
